<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <org.geometerplus.android.fbreader.RoundedImageView
            android:id="@+id/img_thumbnail"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="Thumbnail Image"
            android:gravity="center_vertical" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70pt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/img_thumbnail" >

            <TextView
                android:id="@+id/user_name_text_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_text_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/user_name_text_field"
                android:layout_toRightOf="@id/user_name_text_field"
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/comment_text_field"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name_text_field"
                android:background="@drawable/bubble_left"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>